                android:src="@drawable/thumbnail1"/>
            <ImageView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/thumbnail1"/>
            <ImageView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/thumbnail1"/>
            <ImageView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/thumbnail1"/>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>